<p id="notice"><%= notice %></p>

<h1>Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, topic %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic), class:"btn btn-info btn-sm" %></td>
        <td><%= link_to 'X', topic, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path, class:"btn btn-primary" %>
